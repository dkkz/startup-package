{
  "name": "startup",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node index.js & npm run watch",
    "clean": "rm -rf public/_*/ && rm -rf node_modules",
    "refresh": "npm run clean && npm i && npm start",
    "pug": "pug -P -w develop/pug/ -o public/ ",
    "style:sass": " node-sass --output-style expanded develop/style/ -o public/",
    "style:autoprefixer": "postcss --use autoprefixer -c .postcssrc.json public/common/css/*.css -d public/common/css/",
    "style:build": "npm run style:sass & npm run style:autoprefixer",
    "browserify": "mkdir -p public/common/js/ && browserify -t babelify develop/scripts/out.js -o public/common/js/common.js",
    "babel": "mkdir -p public/common/js/ && babel develop/scripts/out.js > public/common/js/common.js",
    "watch:js": "watchify -t babelify develop/scripts/out.js -o public/common/js/common.js -v",
    "watch:all": "parallelshell 'npm run style:sass' 'npm run pug' 'npm run watch:js'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "node-sass": "^3.13.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.6.0",
    "watch": "^1.0.1",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "express": "^4.14.0",
    "open": "0.0.5",
    "pug": "^2.0.0-beta6"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
